{
  "ai": {
    "type": "bool",
    "default": false,
    "desc": "auto-indent"
  },
  "ln": {
    "type": "bool",
    "default": false,
    "desc": "line numbers"
  },
  "nw": {
    "type": "bool",
    "default": false,
    "desc": "open in new window"
  },
  "vs": {
    "type": "str",
    "allowed values": ["on", "off", "auto"],
    "default": "on",
    "desc": "vertical scrollbar"
  },
  "sit": {
    "type": "bool",
    "default": false,
    "desc": "start in terminal"
  },
  "tk": {
    "type": "keycode",
    "default": "Escape",
    "desc": "terminal key"
  },
  "dl": {
    "type": "str",
    "default": "en_US",
    "desc": "default spellcheck language"
  },
  "ato": {
    "type": "bool",
    "default": false,
    "desc": "animate terminal output"
  },
  "tai": {
    "type": "int",
    "default": 5,
    "desc": "terminal animation interval"
  },
  "pw": {
    "type": "int",
    "default": 1000,
    "desc": "max page width"
  }
}
