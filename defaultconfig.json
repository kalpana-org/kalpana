{
  "automatic": {
    "Auto-Indent": false,
    "Line Numbers": false,
    "open in New Window": false,
    "Vertical Scrollbar": "on",
    "Animate Terminal Output": false,
    "Terminal Animation Interval": 5,
    "max Page Width": 1000,
    "Miscellaneous Animations": false,
    "Show WordCount in titlebar": false
  },
  "manual": {
    "start in terminal": false,
    "terminal hotkey": "Escape",
    "default spellcheck language": "en_US",
    "chapter sidebar hotkey": "Ctrl+R",
    "prologue chapter name": "[prologue]",
    "chapter strings": [
      [
        ">> +CHAPTER (?P<num>\\d+) ?[:-] (?P<name>.+)",
        "{num} - {name}"
      ],
      [
        ">> +CHAPTER (?P<num>\\d+)\\s*$",
        "{num}"
      ]
    ]
  }
}
